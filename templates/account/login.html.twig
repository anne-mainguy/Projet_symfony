{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="col-md-3 mx-auto">&nbsp;</div>
<div class="col-md-6 mx-auto">
    <h1>Connexion</h1>

    {% if hasError %}
        <div class="alert alert-danger">Identifiant ou mot de passe incorrect.</div>
    {% endif %}
    <form action="{{ path("account_login") }}" method="POST">
        <div class="form-group">
            <label for="pseudo">Pseudo</label>
            <input type="text" name="_username" id="pseudo" class="form-control" required value="{{ username }}">
        </div>
        <div class="form-group">
            <label for="password">Mot de passe</label>
            <input type="password" name="_password" id="password" class="form-control" required >
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-outline-primary mt-3">Connexion</button>
        </div>
    </form>
</div>
{% endblock %}
